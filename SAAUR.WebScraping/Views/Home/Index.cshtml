@{
	ViewData["Title"] = "SCRAPING";
}

<div class="row">
	<div class="col-xl-12">
		<div class="card card-xl-stretch mb-2">
			<div class="card-body">
				<div class="row">
					<div class="col-lg-12">
						<form novalidate id="Form">
							<div class="input-group">
								<input type="text" style="width: 70%;" class="form-control form-control-sm" placeholder="Url scraping" id="txtUrl" autocomplete="off" name="url" required />
								<input type="text" style="width: 30%;" class="form-control form-control-sm" placeholder="Clase seleccionada" id="txtClass" autocomplete="off" name="class" required />
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-xl-12">
		<div class="card card-xl-stretch mb-xl-8">
			<div class="card-body">
				<div class="input-group mb-2">
					<button type="button" class="btn btn-sm btn-success" onclick="scraping();">Iniciar Scraping</button>
					<button type="button" class="btn btn-sm btn-dark" onclick="clearScraping();">Limpar</button>
				</div>
				<div class="panel-scraping hover-scroll-y h-200px">
					<ul id="listScraping"></ul>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/scraping.js"></script>
	<script type="text/javascript">
		document.onreadystatechange = function () {
			if (document.readyState == "complete") {
				localStorage.clear();
				document.getElementById("lblTitleHeader").innerText = "Web Scraping";
				document.getElementById("lblTitleSubHeader").innerText = "Scraping";
			}
		}
	</script>
}